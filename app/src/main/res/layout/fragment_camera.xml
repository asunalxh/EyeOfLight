<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent">


    <com.intel.realsense.librealsense.GLRsSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.eyeoflight_lite.customview.OverlayView
        android:id="@+id/tracking_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/glSurfaceView"
        app:layout_constraintLeft_toLeftOf="@id/glSurfaceView"
        app:layout_constraintRight_toRightOf="@id/glSurfaceView"
        app:layout_constraintTop_toTopOf="@id/glSurfaceView" />


</androidx.constraintlayout.widget.ConstraintLayout>